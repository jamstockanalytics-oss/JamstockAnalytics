# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://jamstockanalytics-oss.github.io

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jamstockanalytics
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# AI Service Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# External APIs
JSE_API_URL=https://api.jamstockex.com
NEWS_API_KEY=your-news-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
DOCKER_IMAGE=jamstockanalytics/jamstockanalytics